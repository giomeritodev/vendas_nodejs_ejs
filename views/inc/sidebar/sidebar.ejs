<!-- Sidebar -->
<div class="bg-light border-right" id="sidebar-wrapper">
  <div class="sidebar-heading" style="background-color: darkslateblue">
    <%- include("./../logo") -%>
  </div>
  
  <div class="list-group list-group-flush">
      <ul class="sidebar-menu" data-widget="tree">
       
        <% menus.forEach(function(menu){ %>
        
          <li <% if(menu.active) { %> class="active" <% } %>>
            <a href="<%= menu.href %>" class="list-group-item list-group-item-action bg-light">              
              <i class="fas fa-<%= menu.icon %>"></i>
              <span><%= menu.text %></span>
            </a>
          </li>  
        
        <% }); %>

      </ul>
  </div>
</div>
<!-- /#sidebar-wrapper -->